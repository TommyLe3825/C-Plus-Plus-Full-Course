#include <iostream>
using namespace std;

class Vehicle { //abstract class which is like the blueprint for all derived class
    //complete the class definition
    public:
        virtual void drive() = 0; //Overidden by derived classes
};

class Car: public Vehicle {
    public:
        void drive() {
            cout << "Driving a car!"<<endl;
        }
};

class Bicycle: public Vehicle {
    public:
        void drive() {
            cout << "Driving a bicycle!"<<endl;
        }
};

int main()
{
    Car c;
    Bicycle b;
    Vehicle *v1 = &c;
    Vehicle *v2 = &b;

    v1->drive();
    v2->drive();

    return 0;
} 
